@model IEnumerable<STACK.Models.Question>

@{
    ViewBag.Title = "Top Questions";
}

<h2></h2>

<p>
    @Html.ActionLink("Ask Question", "Create", "Questions")
</p>

<div>
    @foreach (var item in Model)
    {
        <hr />
        <div class="row" id="@Html.DisplayFor(modelItem => item.Id)">
               
            <div class="col-md-2">
                <p>answers: </p>
            </div>
             
            <div class="col-md-6">
                <h3>@Html.ActionLink(( item.Text), "Details", "Questions", new { @id = item.Id }, null)</h3>
            </div>
            <div class="col-md-2">
                <p>Data: @Html.DisplayFor(modelItem => item.Date)</p>
            </div>
            <div class="col-md-2">
                <p>Name: @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)</p>
            </div>
        </div>
    }
</div>
